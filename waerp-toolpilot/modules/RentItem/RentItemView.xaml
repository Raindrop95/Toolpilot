        <Grid
            Grid.Row="3"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="20,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <DataGrid
                x:Name="dataGridFilter"
                Grid.Column="1"
                ItemsSource="{Binding Path=filterData}"
                MouseDoubleClick="dataGridFilter_MouseDoubleClick"
                SelectionChanged="filterData_SelectionChanged">
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="MinHeight" Value="40" />
                        <Setter Property="MaxHeight" Value="40" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#00F4E6" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.CellStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=name}"
                        ElementStyle="{StaticResource SingleColDataGrid}"
                        Header="{DynamicResource searchFilterHeader}"
                        IsReadOnly="True" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    x:Name="backBtn"
                    Width="100"
                    Margin="10"
                    Click="getLastStage"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="{DynamicResource backButton}" />
                </Button>
                <Button
                    x:Name="nextBtn"
                    Width="100"
                    Click="getNextStage"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="{DynamicResource nextButton}" />
                </Button>
            </StackPanel>
        </Grid>
        <Grid
            Grid.Row="3"
            Grid.RowSpan="3"
            Grid.Column="1"
            Margin="10,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBox
                    x:Name="searchBox"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    materialDesign:HintAssist.Hint="{DynamicResource searchBarText}"
                    AcceptsReturn="True"
                    Cursor="Hand"
                    IsEnabled="True"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    TextChanged="searchBox_TextChanged"
                    TextWrapping="Wrap" />
                <Button
                    x:Name="OpenRentBtn"
                    Grid.Column="1"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Click="openRentWindow"
                    IsEnabled="False"
                    Style="{StaticResource NormalButton}">
                    <TextBlock Text="{DynamicResource takeItemOutButton}" />
                </Button>
                <Button
                    x:Name="AddItemButton"
                    Grid.Column="2"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Click="AddItemButton_Click"
                    IsEnabled="False"
                    Style="{StaticResource SoftNormalButton}">
                    <materialDesign:PackIcon Kind="ArchivePlus" />
                </Button>
            </Grid>

            <DataGrid
                x:Name="dataGridItems"
                Grid.Row="1"
                Margin="0,0,0,50"
                AutoGenerateColumns="False"
                ItemsSource="{Binding Path=itemData}"
                MouseDoubleClick="dataGridItems_MouseDoubleClick"
                SelectionChanged="ItemData_SelectionChanged"
                SelectionMode="Single">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Click="CopyItemIdent" Header="{DynamicResource subItemCopy1}" />

                        <MenuItem Click="CopyDescription" Header="{DynamicResource subItemCopy2}" />

                        <MenuItem Click="CopyAll" Header="{DynamicResource subItemCopy3}" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="MinHeight" Value="100" />
                        <Setter Property="MaxHeight" Value="100" />
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#00F4E6" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>

                        </Style.Triggers>

                    </Style>

                </DataGrid.CellStyle>


                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=item_ident}"
                        ElementStyle="{StaticResource GridCellPad}"
                        Header="{DynamicResource itemIdent}"
                        HeaderStyle="{StaticResource LeftGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Path=item_description}"
                        ElementStyle="{StaticResource GridCellPad}"
                        Header="{DynamicResource itemDescription1Hint}"
                        HeaderStyle="{StaticResource LeftGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="2*"
                        Binding="{Binding Path=item_description_2}"
                        ElementStyle="{StaticResource GridCellPad}"
                        Header="{DynamicResource itemDescription2Hint}"
                        HeaderStyle="{StaticResource LeftGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=item_diameter}"
                        ElementStyle="{StaticResource GridCellPad}"
                        Header="⌀ in mm"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=item_quantity_total}"
                        ElementStyle="{StaticResource QuantityCell}"
                        Header="{DynamicResource itemQuantHint}"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding Path=item_quantity_total_new}"
                        ElementStyle="{StaticResource QuantityCell}"
                        Header="Bestand (neu)"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True" />
                    <DataGridTemplateColumn
                        Width="2*"
                        Header="{DynamicResource imageTableHeader}"
                        HeaderStyle="{StaticResource CenterGridHeaderStyle}"
                        IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Width="100" RenderOptions.BitmapScalingMode="HighQuality">
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="{Binding Path=item_image_path}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=item_image_path}" Value="">
                                                    <Setter Property="Source" Value="pack://application:,,,/assets/images/default/default.jpg" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Path=item_image_path}" Value="{x:Null}">
                                                    <Setter Property="Source" Value="pack://application:,,,/assets/images/default/default.jpg" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>

        </Grid>



    </Grid>

</UserControl>

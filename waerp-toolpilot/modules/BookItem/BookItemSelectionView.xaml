                                                <DataTrigger Binding="{Binding item_constructed}" Value="0">
                                                    <Setter Property="Source" Value="/assets/images/app/NotIconPNG.png" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn

<Window
    x:Class="waerp_toolpilot.FirstTimeStartup.FirstTimeStartUpWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:waerp_toolpilot.FirstTimeStartup"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rules="clr-namespace:waerp_toolpilot.errorHandling"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    Width="1100"
    Height="700"
    AllowsTransparency="True"
    Background="Transparent"
    FontFamily="{DynamicResource MaterialDesignFont}"
    ResizeMode="NoResize"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="5*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.RowSpan="2"
            BorderBrush="#222222"
            BorderThickness="10"
            CornerRadius="10"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
            <Rectangle
                Fill="#EEEEEE"
                RadiusX="5"
                RadiusY="5">
                <Rectangle.Effect>
                    <BlurEffect KernelType="Gaussian" Radius="0" />
                </Rectangle.Effect>
            </Rectangle>
        </Border>
        <Grid Margin="10,10,10,0" Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Rectangle
                Grid.ColumnSpan="2"
                Fill="#222222"
                RadiusX="5"
                RadiusY="5" />
            <Rectangle
                Grid.ColumnSpan="3"
                Margin="0,0,0,0"
                Fill="#222222" />

            <Image
                Grid.Column="0"
                Width="{Binding ActualWidth, ElementName=Navigation}"
                Height="40"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                RenderOptions.BitmapScalingMode="HighQuality"
                Source="\assets\images\logos\tooltrack-logo_black.png" />
            <TextBlock
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="27"
                FontWeight="Regular"
                Foreground="White"
                Text=" Installation" />



            <Button
                x:Name="CancleInstallationBtn"
                Grid.Column="2"
                Width="200"
                Margin="0,0,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="CancleInstallationBtn_Click"
                Content="Installation abbrechen"
                IsEnabled="True"
                Style="{StaticResource NormalButton}" />

        </Grid>



        <materialDesign:Card
            Grid.Row="1"
            Margin="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="#222222">
            <TabControl
                x:Name="InstallationTabs"
                Margin="10,0,10,10"
                Background="#222222"
                SelectionChanged="InstallationTabs_SelectionChanged"
                Style="{StaticResource MaterialDesignTabControl}"
                TabStripPlacement="Left">

                <TabControl.Resources>
                    <!--  BasedOn the MaterialDesign TabItem style  -->
                    <Style BasedOn="{StaticResource MaterialDesignTabItem}" TargetType="TabItem">
                        <!--  Set default properties  -->
                        <Setter Property="Foreground" Value="Gray" />

                        <Style.Triggers>
                            <!--  Trigger for selected TabItem  -->
                            <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                                <Setter Property="Foreground" Value="Black" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TabControl.Resources>

                <TabItem
                    Background="#7761FE"
                    Cursor="Hand"
                    Header="Start">
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.RowSpan="4"
                            Margin="-20"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle Margin="0" Fill="#EFEFEF" />
                        </Border>
                        <TextBlock
                            Grid.Row="0"
                            FontSize="16"
                            TextWrapping="Wrap">
                            Wilkommen zu toolpilot!<LineBreak />
                            <LineBreak />
                            Für die Installation müssen sie einige Daten bereit halten. Hier eine Auflistung der benötigten Daten für eine erfolgreiche und schnelle Installation:</TextBlock>

                        <ListBox Grid.Row="1" VerticalAlignment="Center">
                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <BulletDecorator>
                                        <BulletDecorator.Bullet>
                                            <Ellipse
                                                Width="5"
                                                Height="5"
                                                Fill="Black" />
                                        </BulletDecorator.Bullet>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="16"
                                            Text="Ein unbenutzter und gültiger Lizenzschlüssel." />
                                    </BulletDecorator>
                                </StackPanel>
                            </ListBoxItem>

                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <BulletDecorator>
                                        <BulletDecorator.Bullet>
                                            <Ellipse
                                                Width="5"
                                                Height="5"
                                                Fill="Black" />
                                        </BulletDecorator.Bullet>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="16"
                                            Text="MySql Serveradresse, Benutzername und Passwort sowie bennung der zu nutzenden Datenbank bzw. Schemas." />
                                    </BulletDecorator>
                                </StackPanel>
                            </ListBoxItem>

                            <ListBoxItem>
                                <StackPanel Orientation="Horizontal">
                                    <BulletDecorator>
                                        <BulletDecorator.Bullet>
                                            <Ellipse
                                                Width="5"
                                                Height="5"
                                                Fill="Black" />
                                        </BulletDecorator.Bullet>
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            FontSize="16"
                                            Text="ggfls. Druckpapier-Dokument in PDF für automatisch erzeugte Dokumente." />
                                    </BulletDecorator>
                                </StackPanel>
                            </ListBoxItem>
                        </ListBox>




                        <TextBlock
                            Grid.Row="2"
                            Margin="0,30,0,0"
                            FontSize="16"
                            TextAlignment="Center"
                            TextWrapping="Wrap">
                            Sollten Sie während der Installation Probleme haben, dann wenden Sie sich bitte an den Supportdienst unter folgender Rufnummer +49 176 31195943 oder per E-Mail and info@toolpilot.info
                        </TextBlock>
                        <Button
                            x:Name="StartNextBtn"
                            Grid.Row="3"
                            Grid.Column="2"
                            Width="200"
                            Margin="0,0,20,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Click="StartNextBtn_Click"
                            Content="Weiter"
                            IsEnabled="True"
                            Style="{StaticResource NormalButton}" />
                    </Grid>

                </TabItem>

                <TabItem
                    Background="White"
                    Cursor="Hand"
                    Header="Lizenzvereinbarung">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border Grid.RowSpan="3" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle Margin="0" Fill="#EFEFEF" />
                        </Border>
                        <TextBlock
                            Grid.Row="0"
                            Margin="20"
                            FontSize="16"
                            Text="Bitte lesen Sie die Lizenzvereinbarung vollständig durch und bestätigen Sie diese dann." />
                        <Border
                            Grid.Row="1"
                            Margin="20"
                            BorderBrush="#A7A7A7"
                            BorderThickness="2"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <ScrollViewer Background="#D8D8D8" ScrollChanged="ScrollViewer_ScrollChanged">
                                <TextBox x:Name="LicenseText">Lorem</TextBox>
                            </ScrollViewer>
                        </Border>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <CheckBox
                                x:Name="AcceptLicenseCheckbox"
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="20,0,0,20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Checked="AcceptLicenseCheckbox_Checked"
                                Content="Lizenzvereinbarung zustimmen"
                                FontSize="16"
                                IsChecked="False"
                                IsEnabled="False"
                                IsThreeState="False"
                                Unchecked="AcceptLicenseCheckbox_Unchecked" />
                            <Button
                                x:Name="BackBtn"
                                Grid.Row="1"
                                Grid.Column="0"
                                Width="200"
                                Margin="20,0,0,20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Click="BackBtn_Click"
                                Content="Zurück"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}" />
                            <Button
                                x:Name="LicenseNextBtn"
                                Grid.Row="1"
                                Grid.Column="1"
                                Width="200"
                                Margin="0,0,20,20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Click="LicenseNextBtn_Click"
                                Content="Weiter"
                                IsEnabled="False"
                                Style="{StaticResource NormalButton}" />
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
                    Background="White"
                    Cursor="Hand"
                    Header="Lizenz">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border Grid.RowSpan="4" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle Margin="0" Fill="#EFEFEF" />
                        </Border>
                        <TextBlock
                            x:Name="LicenseTitelTextblock"
                            Grid.Row="0"
                            Margin="20"
                            FontSize="16"
                            Text="Bitte geben Sie Ihren Lizenzschlüssel ein und klicken Sie dann auf den Button 'Lizenz aktivieren'. Bei erfolgreicher Aktivierung erscheint ein Fenster welches den Status anzeigt und dann können Sie auf 'Weiter' klicken."
                            TextWrapping="Wrap" />
                        <Border
                            x:Name="LicenseKeyInputBorder"
                            Grid.Row="1"
                            Width="700"
                            Height="200"
                            Background="#EBEBEB"
                            BorderBrush="#A7A7A7"
                            BorderThickness="5"
                            CornerRadius="10"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <TextBlock
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    Text="Lizenzschlüssel" />
                                <TextBlock
                                    Margin="10"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    FontSize="14"
                                    FontWeight="Light"
                                    Text="Der Lizenzschlüssel hat das Format: XXXXX-XXXXX-XXXXX-XXXXX-XXXXX" />

                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <TextBox
                                        x:Name="licenseField1"
                                        Width="90"
                                        Margin="20,0,20,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        AcceptsReturn="False"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        MaxLength="5"
                                        PreviewKeyDown="licenseField1_PreviewKeyDown"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextChanged="licenseField1_TextChanged" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="-" />
                                    <TextBox
                                        x:Name="licenseField2"
                                        Width="90"
                                        Margin="20,0,20,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        AcceptsReturn="False"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        MaxLength="5"
                                        PreviewKeyDown="licenseField1_PreviewKeyDown"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextChanged="licenseField2_TextChanged" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="-" />
                                    <TextBox
                                        x:Name="licenseField3"
                                        Width="90"
                                        Margin="20,0,20,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        AcceptsReturn="False"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        MaxLength="5"
                                        PreviewKeyDown="licenseField1_PreviewKeyDown"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextChanged="licenseField3_TextChanged" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="-" />
                                    <TextBox
                                        x:Name="licenseField4"
                                        Width="90"
                                        Margin="20,0,20,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        AcceptsReturn="False"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        MaxLength="5"
                                        PreviewKeyDown="licenseField1_PreviewKeyDown"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextChanged="licenseField4_TextChanged" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="-" />
                                    <TextBox
                                        x:Name="licenseField5"
                                        Width="90"
                                        Margin="20,0,20,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        AcceptsReturn="False"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        MaxLength="5"
                                        PreviewKeyDown="licenseField1_PreviewKeyDown"
                                        Style="{StaticResource MaterialDesignFilledTextBox}" />
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Button
                            x:Name="LicenseActivationBtn"
                            Grid.Row="2"
                            Grid.Column="0"
                            Width="200"
                            Margin="20,0,20,20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Click="LicenseActivationBtn_Click"
                            Content="Lizenzaktivieren"
                            IsEnabled="True"
                            Style="{StaticResource NormalButton}" />
                        <Grid x:Name="ButtonRowLicense" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <Button
                                Grid.Column="0"
                                Width="200"
                                Margin="20,0,0,20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Click="BackBtn_Click"
                                Content="Zurück"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}" />
                            <Button
                                x:Name="LicenseActivationNextBtn"
                                Grid.Column="1"
                                Width="200"
                                Margin="0,0,20,20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Click="LicenseActivationNextBtn_Click"
                                Content="Weiter"
                                IsEnabled="False"
                                Style="{StaticResource NormalButton}" />
                        </Grid>
                        <materialDesign:Card
                            x:Name="ShowLoadingLicense"
                            Grid.RowSpan="4"
                            Padding="4"
                            Background="Transparent"
                            UniformCornerRadius="14"
                            Visibility="Hidden">
                            <ProgressBar
                                x:Name="ProgressBarLicenseCircle"
                                Grid.Row="1"
                                Width="60"
                                Height="60"
                                Foreground="#A02619"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0">
                                <ProgressBar.LayoutTransform>
                                    <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="2" ScaleY="2" />
                                </ProgressBar.LayoutTransform>
                            </ProgressBar>
                        </materialDesign:Card>
                    </Grid>

                </TabItem>

                <TabItem
                    Background="White"
                    Cursor="Hand"
                    Header="Datenbank">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border
                            Grid.RowSpan="3"
                            Grid.ColumnSpan="2"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle Margin="0" Fill="#EFEFEF" />
                        </Border>
                        <Border
                            Margin="10,10,0,10"
                            BorderBrush="#8C8C8C"
                            BorderThickness="5"
                            CornerRadius="5"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Rectangle
                                    Margin="-1"
                                    Fill="#EEEEEE"
                                    RadiusX="5"
                                    RadiusY="5"
                                    Stroke="#8C8C8C" />
                                <StackPanel>
                                    <TextBox
                                        x:Name="ServerAdress"
                                        MaxWidth="400"
                                        Margin="10"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Serveradresse"
                                        materialDesign:TextFieldAssist.HasClearButton="True"
                                        AcceptsReturn="True"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextWrapping="Wrap" />

                                    <TextBox
                                        x:Name="DatabaseUser"
                                        MaxWidth="400"
                                        Margin="10"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Benutzername"
                                        materialDesign:TextFieldAssist.HasClearButton="True"
                                        AcceptsReturn="True"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextWrapping="Wrap" />
                                    <PasswordBox
                                        x:Name="DatabasePassword"
                                        MaxWidth="400"
                                        Margin="10"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Passwort"
                                        IsEnabled="{Binding ElementName=RevealPasswordFilledEnabled, Path=IsChecked}"
                                        Style="{StaticResource MaterialDesignFilledRevealPasswordBox}" />


                                    <TextBox
                                        x:Name="ServerSchema"
                                        MaxWidth="400"
                                        Margin="10"
                                        VerticalAlignment="Center"
                                        materialDesign:HintAssist.Hint="Datenbank Schema"
                                        AcceptsReturn="True"
                                        IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                        Style="{StaticResource MaterialDesignFilledTextBox}"
                                        TextWrapping="Wrap" />
                                    <StackPanel HorizontalAlignment="Center" Orientation="Vertical">
                                        <Button
                                            Margin="10"
                                            Click="TestConnection_Click"
                                            Content="Verbindung testen"
                                            Style="{StaticResource NormalButton}" />
                                        <Button
                                            x:Name="SaveValues"
                                            Margin="10"
                                            Click="SaveValues_Click"
                                            Content="Werte speichern"
                                            IsEnabled="False"
                                            Style="{StaticResource NormalButton}" />
                                        <Button
                                            x:Name="ConfigureDB"
                                            Margin="10"
                                            Click="ConfigureDB_Click"
                                            Content="Datenbank anlegen"
                                            IsEnabled="False"
                                            Style="{StaticResource NormalButton}" />
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,10,10,10"
                            BorderBrush="#8C8C8C"
                            BorderThickness="5"
                            CornerRadius="5"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle
                                Margin="-1"
                                Fill="#EEEEEE"
                                RadiusX="5"
                                RadiusY="5"
                                Stroke="#8C8C8C" />
                        </Border>

                        <Grid
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="20,20,20,20">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />

                                    <RowDefinition Height="*" />

                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Rectangle
                                    Grid.RowSpan="3"
                                    Margin="0,10,0,10"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Fill="#DFDFDF"
                                    RadiusX="10"
                                    RadiusY="10" />
                                <Rectangle
                                    x:Name="ValidationDatabaseBar"
                                    Grid.Row="0"
                                    Height="10"
                                    Margin="10,15,10,0"
                                    Fill="#A94C42"
                                    RadiusX="5"
                                    RadiusY="5" />
                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Text="Datenbanken Verbindung"
                                    TextAlignment="Center" />
                                <TextBlock
                                    x:Name="DatabaseConnectionStatus"
                                    Grid.Row="2"
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Light"
                                    Text="Status: "
                                    TextAlignment="Center" />
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />

                                    <RowDefinition Height="*" />

                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Rectangle
                                    Grid.RowSpan="3"
                                    Margin="0,10,0,10"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Fill="#DFDFDF"
                                    RadiusX="10"
                                    RadiusY="10" />
                                <Rectangle
                                    x:Name="ValidationSchemaBar"
                                    Grid.Row="0"
                                    Height="10"
                                    Margin="10,15,10,0"
                                    Fill="#A94C42"
                                    RadiusX="5"
                                    RadiusY="5" />
                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Text="Datenbanken Schema"
                                    TextAlignment="Center" />
                                <TextBlock
                                    x:Name="DatabaseSchemaStatus"
                                    Grid.Row="2"
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Light"
                                    Text="Status: "
                                    TextAlignment="Center" />
                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />

                                    <RowDefinition Height="*" />

                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Rectangle
                                    Grid.RowSpan="3"
                                    Margin="0,10,0,10"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Fill="#DFDFDF"
                                    RadiusX="10"
                                    RadiusY="10" />
                                <Rectangle
                                    x:Name="ValidationTablesBar"
                                    Grid.Row="0"
                                    Height="10"
                                    Margin="10,15,10,0"
                                    Fill="#A94C42"
                                    RadiusX="5"
                                    RadiusY="5" />
                                <TextBlock
                                    Grid.Row="1"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="DemiBold"
                                    Text="Datenbanken Tabellen"
                                    TextAlignment="Center" />
                                <TextBlock
                                    x:Name="DatabaseTablesStatus"
                                    Grid.Row="2"
                                    Margin="0,0,0,15"
                                    VerticalAlignment="Center"
                                    FontSize="14"
                                    FontWeight="Light"
                                    Text="Status: "
                                    TextAlignment="Center" />
                            </Grid>
                            <Grid x:Name="SuccessInfo" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock
                                    x:Name="SuccessText"
                                    Grid.Column="0"
                                    Margin="10,10,10,10"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    FontWeight="Regular"
                                    Foreground="#34864B"

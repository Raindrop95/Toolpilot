                                    AcceptsReturn="False"
                                    IsEnabled="{Binding Path=IsChecked, ElementName=MaterialDesignFilledTextBoxEnabledComboBox}"
                                    PreviewTextInput="marginLeft_PreviewTextInput"
                                    Style="{StaticResource MaterialDesignFilledTextBox}"
                                    TextChanged="marginBottom_TextChanged" />
                            </StackPanel>


                        </Grid>

                        <Grid Grid.Row="2" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.2*" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="PDFFilePath"
                                Grid.Column="0"
                                Margin="20,0,20,0"
                                VerticalAlignment="Center"
                                materialDesign:HintAssist.Hint="Briefpapier Datei"
                                AcceptsReturn="False"
                                IsEnabled="False"
                                Style="{StaticResource MaterialDesignFilledTextBox}"
                                Text="" />
                            <Button
                                x:Name="SelectFileBtn"
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Click="selectPdfDocument"
                                IsEnabled="False"
                                Style="{StaticResource NormalButton}">
                                <materialDesign:PackIcon Kind="File" />
                            </Button>
                            <CheckBox
                                x:Name="NoBackletterCheckbox"
                                Grid.Column="2"
                                Margin="0,0,20,0"
                                HorizontalAlignment="Right"
                                Checked="NoBackletterCheckbox_Checked"
                                Content="Kein Briefpapier"
                                IsChecked="True"
                                IsThreeState="False"
                                Unchecked="NoBackletterCheckbox_Unchecked" />
                        </Grid>

                        <Border
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="240"
                            Height="320"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="LightGray"
                            BorderBrush="Black"
                            BorderThickness="3"
                            MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Image
                                    Grid.Row="0"
                                    Height="290"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RenderOptions.BitmapScalingMode="HighQuality"
                                    Source="\assets\images\app\Druckdatei_wærp_Briefpapier-din5008-form-b.jpg" />

                                <Rectangle
                                    x:Name="LeftMarginBarOrigin"
                                    Width="1"
                                    Height="320"
                                    Margin="20,0,0,0"
                                    HorizontalAlignment="Left"
                                    Fill="#CDCDCD" />
                                <Rectangle
                                    x:Name="RightMarginBarOrigin"
                                    Width="1"
                                    Height="320"
                                    Margin="0,0,20,0"
                                    HorizontalAlignment="Right"
                                    Fill="#CDCDCD" />
                                <Rectangle
                                    x:Name="TopMarginBarOrigin"
                                    Width="300"
                                    Height="1"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Fill="#CDCDCD" />
                                <Rectangle
                                    x:Name="BottomMarginBarOrigin"
                                    Width="300"
                                    Height="1"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Fill="#CDCDCD" />
                                <Rectangle
                                    x:Name="LeftMarginBar"
                                    Width="1"
                                    Height="320"
                                    Margin="20,0,0,0"
                                    HorizontalAlignment="Left"
                                    Fill="Black" />
                                <Rectangle
                                    x:Name="RightMarginBar"
                                    Width="1"
                                    Height="320"
                                    Margin="0,0,20,0"
                                    HorizontalAlignment="Right"
                                    Fill="Black" />
                                <Rectangle
                                    x:Name="TopMarginBar"
                                    Width="300"
                                    Height="1"
                                    Margin="0,20,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Top"
                                    Fill="Black" />
                                <Rectangle
                                    x:Name="BottomMarginBar"
                                    Width="300"
                                    Height="1"
                                    Margin="0,0,0,20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Bottom"
                                    Fill="Black" />

                            </Grid>

                        </Border>
                        <Grid Grid.Row="3" Grid.ColumnSpan="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Grid.Column="0"
                                Width="200"
                                Margin="20,0,0,20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Click="BackBtn_Click"
                                Content="Zurück"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}" />
                            <Button
                                x:Name="PrintValuesNextBtn"
                                Grid.Column="1"
                                Width="200"
                                Margin="0,0,20,20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Click="PrintValuesNextBtn_Click"
                                Content="Weiter"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}" />
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem
                    Background="White"
                    Cursor="Hand"
                    Header="Installation">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Border Grid.RowSpan="3" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle Margin="0" Fill="#EFEFEF" />
                        </Border>
                        <TextBlock
                            x:Name="FinishInstallTextblockTop"
                            Grid.Row="0"
                            Margin="20"
                            FontSize="16"
                            Text="Bitte geben Sie zum Abschluss der Installation noch an, ob Sie eine Touchoberfläche benutzen oder Maus und Tastatur zur Bedienung benutzen. Diese Einstellungen können Sie jederzeit nach der Installation in den Einstellungen ändern."
                            TextWrapping="Wrap" />

                        <StackPanel
                            x:Name="SelectInputStackpanel"
                            Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <Border
                                x:Name="SelectTouchBorder"
                                Width="300"
                                Height="200"
                                Margin="20"
                                Background="#D8D8D8"
                                BorderBrush="#A7A7A7"
                                BorderThickness="2"
                                CornerRadius="10"
                                MouseLeftButtonDown="Border_MouseLeftButtonDown">

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Grid.RowSpan="2"
                                        Grid.ColumnSpan="2"
                                        Width="150"
                                        Height="150"
                                        Margin="0,0,10,10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Foreground="#B6B6B6"
                                        Kind="GestureTapButton" />
                                    <TextBlock
                                        Grid.ColumnSpan="2"
                                        Margin="20,20,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="35"
                                        FontWeight="DemiBold"
                                        Text="Toucheingabe" />

                                </Grid>
                            </Border>
                            <Border
                                x:Name="SelectMandKInputBorder"
                                Width="300"
                                Height="200"
                                Margin="20"
                                Background="#D8D8D8"
                                BorderBrush="#A7A7A7"
                                BorderThickness="2"
                                CornerRadius="10"
                                MouseLeftButtonDown="SelectMandKInputBorder_MouseLeftButtonDown">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon
                                        Grid.RowSpan="2"
                                        Grid.ColumnSpan="2"
                                        Width="90"
                                        Height="90"
                                        Margin="90,0,0,30"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        Foreground="#B6B6B6"
                                        Kind="Mouse" />
                                    <materialDesign:PackIcon
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Width="130"
                                        Height="130"
                                        Margin="0,0,0,10"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Foreground="#B6B6B6"
                                        Kind="KeyboardOutline" />
                                    <TextBlock
                                        Grid.ColumnSpan="2"
                                        Margin="20,20,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="35"
                                        FontWeight="DemiBold"
                                        Text="Maus und Tastatur"
                                        TextWrapping="Wrap" />

                                </Grid>
                            </Border>
                        </StackPanel>
                        <Grid Grid.Row="3" Grid.ColumnSpan="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                x:Name="GoBackFinishInstallBtn"
                                Grid.Column="0"
                                Width="200"
                                Margin="20,0,0,20"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Click="BackBtn_Click"
                                Content="Zurück"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}" />
                            <Button
                                x:Name="FinishInstallationBtn"
                                Grid.Column="1"
                                Width="200"
                                Margin="0,0,20,20"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Click="FinishInstallationBtn_Click"
                                Content="Installation abschließen"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}" />
                        </Grid>
                        <materialDesign:Card
                            x:Name="ShowLoadingFinish"
                            Grid.RowSpan="3"
                            Padding="4"
                            Background="Transparent"
                            UniformCornerRadius="14"
                            Visibility="Hidden">
                            <ProgressBar
                                x:Name="ProgressBarCircle"
                                Grid.Row="1"
                                Width="60"
                                Height="60"
                                Foreground="#A02619"
                                IsIndeterminate="True"
                                Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0">
                                <ProgressBar.LayoutTransform>
                                    <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="2" ScaleY="2" />
                                </ProgressBar.LayoutTransform>
                            </ProgressBar>
                        </materialDesign:Card>
                    </Grid>

                </TabItem>
                <TabItem
                    Background="White"
                    Cursor="Hand"
                    Header="Zusammenfassung">
                    <Grid>
                        <Border Grid.RowSpan="3" MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Rectangle Margin="0" Fill="#EFEFEF" />
                        </Border>
                        <StackPanel
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="30"
                                Text="Sie haben die Installation erfolgreich abgeschlossen!" />
                            <CheckBox
                                x:Name="StartApplicationNowCheckbox"
                                Grid.Column="0"
                                Margin="0,90,0,90"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Content="Toolpilot jetzt starten"
                                FontSize="20"
                                IsChecked="True"
                                IsEnabled="True"
                                IsThreeState="False" />
                            <Button
                                x:Name="FinishInstalaltionBtn"
                                Grid.Column="2"
                                Width="300"
                                Height="80"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="#40B052"
                                BorderBrush="#40B052"
                                Click="FinishInstalaltionBtn_Click"
                                FontSize="20"
                                Foreground="white"
                                IsEnabled="True"
                                Style="{StaticResource NormalButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="Installation beenden" />
                                    <materialDesign:PackIcon
                                        Width="30"
                                        Height="30"
                                        Margin="20,0,0,0"
                                        VerticalAlignment="Center"
                                        Kind="CheckCircleOutline" />
                                </StackPanel>
                            </Button>

                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>
        </materialDesign:Card>

    </Grid>
</Window>
